{
  "name": "aws-nestjs-starter",
  "version": "0.0.1",
  "description": "A starter project that makes creating a deployable AWS Serverless project extremely easy",
  "author": "vousmeevoyez",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "deploy": "sls deploy --verbose",
    "package": "sls package",
    "lint": "eslint \"{src,test}/**/*.ts\" --max-warnings 0",
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:cov": "jest --verbose --coverage",
    "test:cov:all": "npm run test:cov && npm run test:e2e",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --testTimeout 1000000 --coverage",
    "sls:start": "cross-env NO_COLOR= cross-env IS_NOT_SLS= sls offline start",
    "sls:online": "cross-env NO_COLOR= cross-env IS_NOT_SLS= cross-env IS_DDB_LOCAL= sls offline",
    "cov:merge": "istanbul-merge --out coverage/coverage-final.json ./coverage/e2e/coverage-final.json ./coverage/unit/coverage-final.json",
    "cov:report": "nyc report -t coverage --report-dir coverage --reporter=html --reporter=cobertura"
  },
  "dependencies": {
    "@graphql-tools/merge": "8.2.14",
    "@nestjs/axios": "0.0.8",
    "@nestjs/common": "8.4.7",
    "@nestjs/config": "2.1.0",
    "@nestjs/core": "8.4.7",
    "@nestjs/graphql": "9.1.2",
    "@nestjs/platform-express": "8.4.7",
    "@vendia/serverless-express": "4.8.2",
    "apollo-server-express": "3.9.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "graphql": "15.8.0",
    "husky": "8.0.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5",
    "type-graphql": "1.1.1",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@nestjs/cli": "8.2.6",
    "@nestjs/schematics": "8.0.11",
    "@nestjs/testing": "8.4.7",
    "@shelf/jest-dynamodb": "3.0.0",
    "@types/aws-lambda": "8.10.101",
    "@types/express": "4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/istanbul": "^0.4.30",
    "@types/jest": "28.1.2",
    "@types/js-yaml": "4.0.5",
    "@types/node": "16.11.41",
    "@types/serverless": "1.78.44",
    "@types/supertest": "2.0.12",
    "@types/uuid": "8.3.4",
    "@typescript-eslint/eslint-plugin": "5.29.0",
    "@typescript-eslint/parser": "5.29.0",
    "change-case": "4.1.2",
    "cross-env": "7.0.3",
    "eslint": "8.18.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "glob-promise": "4.2.2",
    "istanbul-api": "^3.0.0",
    "jest": "28.1.1",
    "js-yaml": "4.1.0",
    "lint-staged": "13.0.2",
    "prettier": "2.7.1",
    "serverless": "^3.19.0",
    "serverless-offline": "8.8.0",
    "serverless-plugin-typescript": "2.1.2",
    "supertest": "6.2.3",
    "ts-jest": "28.0.5",
    "ts-loader": "9.3.0",
    "ts-node": "10.8.1",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4",
    "webpack": "^5.73.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "html",
      "json"
    ],
    "coverageDirectory": "../coverage/unit",
    "coveragePathIgnorePatterns": [
      ".module.ts$",
      ".spec.ts$",
      "migrations",
      "<rootDir>/src/index.ts",
      "<rootDir>/src/main.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
